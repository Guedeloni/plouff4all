

<div class="sign-in-box">
  <div class="image-sign-in item w-100">
    <img src="https://www.valeriebarth.com/wp-content/uploads/2019/07/piscine-couverture.jpg" alt="">
  </div>


  <div class="form-sign-in item" style='width: 600px;'>
    <h2>Ploof in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Ready to swim? Sign in now", class:"btn btn-flat" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

