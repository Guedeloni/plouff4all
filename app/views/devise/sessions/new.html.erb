

<div class="sign-in-box">
  <div class="image-sign-in item">
    <img src="https://medias.lequipe.fr/img-photo-jpg/matthieu-rosset-doit-s-entrainer-pour-realiser-deux-nouveaux-plongeons-a-mounic-l-equipe/1500000001484053/0:0,1331:1331-1200-1200-75/f204a.jpg" alt="">
  </div>


  <div class="form-sign-in item">
    <h2>Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Ready to swim? Sign in now", class:"btn btn-flat" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

