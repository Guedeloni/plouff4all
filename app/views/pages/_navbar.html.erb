<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://www.lapiscinebois.com/wp-content/uploads/2021/01/icone-piscine-coque-polyester.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <%if user_signed_in?%>
      <li class="nav-item">
        <%= link_to "Becoming Host", "#", class: "nav-link" %>
        <!-- <%# <p>Hello <%= current_user.first_name</p> %>  a revoir apres la gestion de susers-->
      </li>
      <%end%>

      <%if user_signed_in?%>
        <li class="nav-item dropdown">
          <%= image_tag "user_icone.png", class: "avatar avatar-bordered", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Go to your Dashboard", "/dashboard", class: "dropdown-item" %>
            <%= link_to "Add a Swimming Pool", "#", class: "dropdown-item" if current_user.role == 'owner' %>
            <%= link_to "Edit your account", "#", class: "dropdown-item" %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>

          </div>
        </li>
      <%else%>
      <li class="nav-item">
        <%= link_to "Sign-in",  new_user_session_path, class: "nav-link"%>
        <!-- <%# <p>Hello <%= current_user.first_name</p> %>  a revoir apres la gestion de susers-->
      </li>
    <%end%>
    </ul>
  </div>
