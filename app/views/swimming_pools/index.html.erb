            <div>
              <h2><%= pool.name %></h2>
              <p><%= pool.description %></p>
            </div>
            <div>
              <h2><%= pool.address %></h2>
              <h2 class="card-index-pricing"><%= pool.price_per_day %> â‚¬</h2>
            </div>
            <!-- <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-index-user avatar-bordered" /> -->
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
