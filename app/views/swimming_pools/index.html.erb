
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.3)), url(https://media.architecturaldigest.com/photos/58542fb7001c874267ed3e75/master/pass/Indoor%20Swimming%20Pools%20Incredible%20Designs%203.jpg);">
  <div class="container">
    <h1>The largest selection of rentals you can find !</h1>
    <div class="search-bar mt-5">
      <form action="/swimming_pools">
        <div class="form-group d-flex align-items-center">
          <input type="search" class="form-control search-control" name="query" id="search" placeholder="Swimming pool located in..." method="GET">
          <button type="submit" class="btn btn-flat search-btn"> üê∏ </button>
        </div>
      </form>
    </div>
  </div>
</div>


<div class="container">
  <div class="box">
    <% @swimming_pools.each do |pool| %>
      <%= link_to swimming_pool_path(pool) do %>
        <div class="card-index">
          <%= cl_image_tag pool.photo.key %>
          <div class="card-index-infos">
            <div>
              <h1 class="card-index-name"><%= pool.name.capitalize %></h1>
              <p><%= pool.description.first(25) %>...</p>
            </div>
            <div class="card-address-pricing">
              <h1 class="card-index-address"><i class="fas fa-location-arrow"></i> <%= pool.address.capitalize %></h1>
              <h1 class="card-index-pricing"><%= pool.price_per_day %> ‚Ç¨/day</h1>
            </div>
            <!-- <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-index-user avatar-bordered" /> -->
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
